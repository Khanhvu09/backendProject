        <!-- logo -->
        <i class="fas fa-wallet fa-lg"></i><a href="/">The Budget Hobo</a>
    </div>

    <h1>Login Page</h1>

    <!-- The Modal -->
    <div id="myModal1" class="modal1">
        <!-- Modal content -->
